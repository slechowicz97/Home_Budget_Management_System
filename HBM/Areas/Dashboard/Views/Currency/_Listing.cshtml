@model HBM.Areas.Dashboard.ViewModels.CurrencyListingModel

@if (Model != null && Model.Currencies != null && Model.Currencies.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr style="text-align: center;">
                <th><b> Nazwa waluty</b></th>
                <th><b> Actions </b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currency in Model.Currencies)
            {
                <tr style="text-align: center;">
                    <td>
                        @currency.Name
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "Currency", new { ID = currency.ID})" type="button" class="data-btn btn btn-gradient-success btn-rounded btn-fw" data-toggle="modal" data-target="#actionModal">Edytuj</button>
                        <button data-href="@Url.Action("Delete", "Currency", new { ID = currency.ID})" type="button" class="data-btn btn btn-gradient-danger btn-rounded btn-fw" data-toggle="modal" data-target="#actionModal">Usuń</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

else
{
    <div class="alert alert-danger" role="alert">
        Brak danych w tabeli!
    </div>
}




