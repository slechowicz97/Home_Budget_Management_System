@model HBM.Areas.Dashboard.ViewModels.NotificationsListingModel
@{
    ViewBag.Title = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Moje przypomnienia</h2>
            <h5 class="card-description">
                W tym miejscu możesz dodawać, usuwać, eytować, a także przeglądać Twoje przypomnienia.
            </h5>
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Tu wpisz szukaną nazwę przypomnienia..." value="@Model.SearchTerm">

                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="mdi mdi-magnify"></i>Szukaj</button>
                    <div class="col"></div>
                    <button data-href="@Url.Action("Action", "Notifications")" class="data-btn btn btn-outline-primary" type="button" data-toggle="modal" data-target="#actionModal">Utwórz nowe</button>
                    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Notifications")">Wyświetl wszystko</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderPartial("_Listing", Model);}
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>
<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            })
    });
</script>